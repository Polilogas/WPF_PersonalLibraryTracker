<Window x:Class="WPF_PersonalLibraryTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_PersonalLibraryTracker"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1020"
        Icon="/resources/Readr-icon.png">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="40"/> <!-- Header Row -->
            <RowDefinition Height="*"/>  <!-- Main Content Row -->
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/> <!-- Main Content Column  + labels-->
            <ColumnDefinition Width="*"/> <!-- Main Content Column  + inputs -->
            <ColumnDefinition Width="150"/> <!-- Sidebar Column -->
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>

        <!-- Library Section -->
        <ListBox x:Name="Library"
         Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="3"
         BorderThickness="0"
         Background="Transparent"
         SelectionMode="Single"
         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
         ScrollViewer.VerticalScrollBarVisibility="Auto"
         ScrollViewer.CanContentScroll="False"
         VirtualizingStackPanel.IsVirtualizing="False">

            <!-- Custom style for each ListBox item -->
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListBoxItem">
                                <Border CornerRadius="6" BorderBrush="Gray" BorderThickness="1" Margin="5">
                                    <Grid>
                                        <!-- Hover/Selection background layer -->
                                        <Border x:Name="HighlightLayer" Background="Transparent" CornerRadius="6"/>

                                        <!-- The actual book content -->
                                        <ContentPresenter Margin="10" />
                                    </Grid>
                                </Border>

                                <ControlTemplate.Triggers>
                                    <!-- Hover -->
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="HighlightLayer" Property="Background" Value="#F0F0F0"/>
                                    </Trigger>

                                    <!-- Selected -->
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="HighlightLayer" Property="Background" Value="#E3E3E3"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListBox.ItemContainerStyle>

            <!-- Items layout: WrapPanel constrained to the ListBox width so items wrap and create vertical scrolling -->
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal"
                      HorizontalAlignment="Left"
                      Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=ListBox}}"/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>

            <!-- Book template -->
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Vertical" Width="200">
                        <Image Source="{Binding CoverImagePath}" Width="100" Height="150" Margin="5" Stretch="UniformToFill"/>
                        <TextBlock Text="{Binding Title}" Width="200" TextAlignment="Center" FontSize="17" TextWrapping="Wrap"/>
                        <TextBlock Text="{Binding Author}" Width="200" TextAlignment="Center" TextWrapping="Wrap"/>
                        <TextBlock Text="{Binding CurrentPage}" Width="200" TextAlignment="Center" TextWrapping="Wrap"/>
                        <TextBlock Text="{Binding Progress}" Width="200" TextAlignment="Center"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>


        <!-- Add Book hiddent elements -->
        <StackPanel x:Name="addBookElementsContainer" 
            Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="2" 
            Orientation="Vertical" 
            Visibility="Collapsed" 
            HorizontalAlignment="Stretch">

            <!-- Cover Image Selection -->
            <StackPanel x:Name="coverImageContainer" Orientation="Horizontal" Margin="0,0,0,20" Visibility="Collapsed" HorizontalAlignment="Left" >
                <Image x:Name="coverImagePreview" Width="100" Height="150" Stretch="UniformToFill" Margin="120 0 0 0"/>
            </StackPanel>
            <StackPanel x:Name="bookCoverSelectionContainer" Orientation="Horizontal" Margin="0,0,0,10" Visibility="Collapsed">
                <TextBlock Text="Select Cover Image:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <Button x:Name="SelectCoverImage" Content="Select Cover Image" Height="20" Click="SelectCoverImage_Click"/>
            </StackPanel>

            <!-- Path -->
            <StackPanel x:Name="bookCoverPathContainer" Orientation="Vertical" Margin="0,0,0,10" Visibility="Collapsed">
                <TextBlock x:Name="ImageCoverPathLabel" Text="Path:" Margin="0,0,0,5"/>
                <TextBlock x:Name="imageCoverPath" Text="" TextWrapping="Wrap" HorizontalAlignment="Stretch" Margin="30 -21 0 0"/>
            </StackPanel>

            <!-- Book Title -->
            <StackPanel x:Name="bookTitelContainer" Orientation="Horizontal" Margin="0,0,0,10" Visibility="Collapsed">
                <TextBlock Text="Book Title:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox x:Name="inputBookTitle" Width="200" MaxLength="100"  Margin="45.5 0 0 0" />
                <TextBlock x:Name="titleWarning" Margin="5 0 0 0" Visibility="Collapsed"/>
            </StackPanel>

            <!-- Book Author -->
            <StackPanel x:Name="bookAuthorContainer" Orientation="Horizontal" Margin="0,0,0,10" Visibility="Collapsed">
                <TextBlock Text="Book Author:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox x:Name="inputBookAuthor" Width="200" MaxLength="100" Margin="31.5 0 0 0"/>
            </StackPanel>

            <!-- Total Pages -->
            <StackPanel x:Name="bookTotalPagesContainer" Orientation="Horizontal" Margin="0,0,0,10" Visibility="Collapsed">
                <TextBlock Text="Book Total Pages:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox x:Name="inputBookTotalPages" Width="200" MaxLength="100" Margin="9 0 0 0"/>
                <TextBlock x:Name="totalPagesWarning" Margin="5 0 0 0" Visibility="Collapsed"/>
            </StackPanel>

            <!-- Current Page -->
            <StackPanel x:Name="bookCurrentPagesContainer" Orientation="Horizontal" Margin="0,0,0,10" Visibility="Collapsed">
                <TextBlock Text="Book Current Page:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox x:Name="inputBookCurrentPage" Width="200" MaxLength="100"/>
                <TextBlock x:Name="currentPageWarning" Margin="5 0 0 0" Visibility="Collapsed"/>
            </StackPanel>

        </StackPanel>


        <!-- Buttons Section -->
        <StackPanel Grid.Column="4" Grid.Row="2" Orientation="Vertical" VerticalAlignment="Top" Margin="10">
            <Button x:Name="AddBookButton" Content="Add Book" Width="120" Height="30" Margin="0,0,0,10" Click="AddBookButton_Click" Visibility="Visible" />
            <Button x:Name="SaveBookButton" Content="Save" Width="120" Height="30" Margin="0,0,0,10" Click="SaveBookButton_Click"  Visibility="Collapsed" />
            <Button x:Name="RemoveBookButton" Content="Remove Book" Width="120" Height="30" Margin="0,0,0,10" Visibility="Visible" Click="RemoveBookButton_Click"/>
            <Button x:Name="EditBookButton" Content="Edit Book" Width="120" Height="30" Margin="0,0,0,10" Visibility="Visible" Click="EditBookButton_Click"/>
            <Button x:Name="SaveLibraryButton" Content="Save Library" Width="120" Height="30" Margin="0,0,0,10" Visibility="Visible"/>
            <Button x:Name="CancelButton" Content="Cancel" Width="120" Height="30" Margin="0,0,0,10" Click="CancelButton_Click" Visibility="Collapsed"/>
        </StackPanel>
    </Grid>
</Window>
